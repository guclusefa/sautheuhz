<%- include('header') %>
    <div class="container">
        <div class="row d-flex justify-content-center text-center">
            <div class="col-xl-12 col-md-10 mt-3">
                <div class="card">
                    <div class="card-body">
                        <h1 class="">Liste des clients</h1>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-lg-12 col-sm-12 col-12 text-center">
                <button class="btn btn-primary"  style="width: 100%;" onclick="location.href = 'form_client';">Ajouter un client</button>
            </div>
        </div>
        <div class="row d-flex justify-content-center">
            <div class="col-xl-12 col-md-10 mt-3">
                <table id="example" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th class="th-sm">ID

                            </th>
                            <th class="th-sm">Nom

                            </th>
                            <th class="th-sm">Prenom

                            </th>
                            <th class="th-sm">Sexe

                            </th>
                            <th class="th-sm">Téléphone

                            </th>
                            <th class="th-sm">Adresse

                            </th>
                            <th class="th-sm">N° Sécurité Sociale

                            </th>
                            <th class="th-sm">Nom de la mutuelle

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <% contenu.forEach(function(user){ %>
                        <tr>
                            <td><%= user.clients_id %></td>
                            <td><%= user.clients_nom %></td>
                            <td> <%= user.clients_prenom %></td>
                            <td><%= user.clients_sexe %></td>
                            <td>0<%= user.clients_tel %></td>
                            <td><%= user.clients_adresse %>, <%= user.clients_cp %> <%= user.clients_ville %></td>
                            <td><%= user.clients_noSS %></td>
                            <td><%= user.Mutuelles_Nom %></td>
                        </tr>
                        <% })%>
                    </tbody>
                   
                </table>
            </div>
        </div>
    </div>

    <%- include('footer') %>