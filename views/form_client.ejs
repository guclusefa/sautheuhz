<%- include('header') %>

    <div class="container">
        <!-- Tittre -->
        <div class="row d-flex justify-content-center text-center">
            <div class="col-xl-12 col-md-12 mt-3">
                <div class="card">
                    <div class="card-body">
                        <h1 class="">Ajouter un client</h1>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <form action="/sautheuhz/form_client" method="POST" class="container" id="client" name="form_client" novalidate>
                <!-- Nom et prénom -->
                <div class="row">
                    <div class="col-lg-6 col-sm-6 col-12">
                        <div class="form-group">
                            <label class="text-inverse" for="inputNom">Nom</label>
                            <input type="text" class="form-control" id="inputNom" name="inputNom" placeholder="Nom"
                            onkeyup="this.value = this.value.toUpperCase();"    
                            required>
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-6 col-12">
                        <div class="form-group">
                            <label class="text-inverse" for="inputPrenom">Prénom</label>
                            <input type="text" class="form-control" id="inputPrenom" name="inputPrenom" 
                            placeholder="Prénom" required>
                        </div>
                    </div>
                </div>

                <!-- Email et tél -->
                <div class="row">
                    <div class="col-md-6 col-sm-12 col-12">
                        <div class="form-group">
                            <label class="text-inverse" for="inputEmail">Email</label>
                            <input type="email" class="form-control" id="inputEmail" name="inputEmail"
                            placeholder="Email" required>

                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-6 col-12">
                        <div class="form-group">
                            <label class="text-inverse" for="inputTel">Tél</label>
                            <input type="tel" minlength="14" maxlength="14" class="form-control" id="inputTel" name="inputTel" placeholder="Téléphone"
                            required>
                        </div>
                    </div>
                </div>

                <!-- Sexe et date de naissance -->
                <div class="row">
                    <div class="col-lg-6 col-sm-6 col-12">
                        <div class="form-group">
                            <label class="text-inverse" for="selectSexe">Sexe</label>
                            <select class="custom-select d-block form-control" id="selectSexe" name="selectSexe"
                                required>
                                <option value="" disabled selected>Choisir un sexe</option>
                                <option value="N">Non binaire</option>
                                <option value="M">Masculin</option>
                                <option value="F">Féminin</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-lg-6 col-sm-6 col-12">
                        <div class="form-group">
                            <label class="text-inverse" for="inputDate">Date de naissance</label>
                            <input type="date" class="form-control" id="inputDate" name="inputDate" required>
                        </div>
                    </div>
                </div>

                <!-- Ville et code postal -->
                <div class="row">
                    <div class="col-lg-6 col-sm-6 col-12">
                        <div class="form-group">
                            <label class="text-inverse" for="inputVille">Ville</label>
                            <input type="text" class="form-control" id="inputVille" name="inputVille"
                                placeholder="Ville" required>
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-6 col-12">
                        <div class="form-group">
                            <label class="text-inverse" for="inputCp">Code postal</label>
                            <input type="text" class="form-control" id="inputCp" name="inputCp"
                                placeholder="Code postal" required>
                        </div>
                    </div>
                </div>

                <!-- Adresse -->
                <div class="row">
                    <div class="col-lg-12 col-sm-12 col-12">
                        <div class="form-group">
                            <label class="text-inverse" for="inputAdresse">Adresse</label>
                            <input type="text" class="form-control" id="inputAdresse" name="inputAdresse"
                                placeholder="Adresse" required>
                        </div>
                    </div>
                </div>

                <!-- No SS -->
                <div class="row">
                    <div class="col-lg-12 col-sm-12 col-12">
                        <div class="form-group">
                            <label class="text-inverse" for="inputSS">N° de sécurité social</label>
                            <input type="text" class="form-control" id="inputSS" name="inputSS"
                            minlength="18" maxlength="18"
                                placeholder="N° de sécurité social" required>
                        </div>
                    </div>
                </div>

                <!-- Mutuelle -->
                <div class="row">
                    <div class="col-lg-12 col-sm-12 col-12">
                        <div class="form-group">
                            <label class="text-inverse" for="selectMutuelle">Mutuelle</label>
                            <select class="custom-select d-block form-control" id="selectMutuelle" name="selectMutuelle"
                                required>
                                <option value="" disabled selected>Choisir une mutuelle</option>
                                <% contenu.forEach(function(user){ %>
                                    <option value="<%= user.Mutuelles_id %>"><%= user.Mutuelles_nom %></option>
                                        <% })%>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Validation du formulaire -->
                <hr>
                <div class="row">
                    <div class="col-lg-12 col-sm-12 col-12 text-center">
                        <button class="btn btn-primary" style="width: 100%;" type="submit">Valider le
                            formulaire</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <%- include('footer') %>