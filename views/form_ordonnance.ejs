<%- include('header') %>

    <div class="container">
        <div class="row d-flex justify-content-center text-center">
            <div class="col-xl-12 col-md-12 mt-3">
                <div class="card">
                    <div class="card-body">
                        <h1 class="">Ajouter une ordonnance</h1>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <form action="/sautheuhz/form_ordonnance" class="container" id="needs-validation" novalidate>
                <div class="row">
                    <div class="col-lg-12 col-sm-12 col-12">
                        <div class="form-group">
                            <label class="text-inverse" for="selectClient">Client</label>
                            <select class="custom-select d-block form-control" id="selectClient" name="selectClient"
                                required>
                                <option value="" disabled selected>Choisir un client</option>
                            </select>
                            <div class="invalid-feedback">
                                Veuillez fournir un(e) client(e) valide.
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12 col-sm-12 col-12">
                        <div class="form-group">
                            <label class="text-inverse" for="selectMedecin">Médecin</label>
                            <select class="custom-select d-block form-control" id="selectMedecin" name="selectMedecin"
                                required>
                                <option value="" disabled selected>Choisir un médecin</option>
                            </select>
                            <div class="invalid-feedback">
                                Veuillez fournir un médecin valide.
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12 col-sm-12 col-12">
                        <div class="form-group">
                            <label class="text-inverse" for="selectPathologie">Pathologie</label>
                            <select class="custom-select d-block form-control" id="selectPathologie"
                                name="selectPathologie" required>
                                <option value="" disabled selected>Choisir une pathologie</option>
                            </select>
                            <div class="invalid-feedback">
                                Veuillez fournir un(e) client(e) valide.
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12 col-sm-12 col-12">
                        <div class="form-group">
                            <label class="text-inverse" for="inputDateDebut">Date de préscription</label>
                            <input type="date" class="form-control" id="inputDateDebut" name="inputDateDebut" required>
                            <div class="invalid-feedback">
                                Veuillez fournir une date de préscription valide.
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="input-group control-group after-add-more">
                        <div class="col-lg-3 col-sm-3 col-3">
                            <div class="form-group">
                                <label for="selectMedicament" class="form-label required">Médicaments(s)</label>
                                <select name="selectMedicament[]" id="selectMedicament" class="form-control" required>
                                    <option value="" disabled selected>Choisir un médicament</option>
                                </select>
                                <div class="invalid-feedback">
                                    Veuillez fournir un médicament valide.
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-sm-3 col-3">
                            <div class="form-group">
                                <label for="selectQte" class="form-label required">Quantité</label>
                                <div class="input-group">
                                    <select name="selectQte[]" id="selectQte" class="form-control" required>
                                        <option value="" disabled selected>Choisir une quantité</option>
                                    </select>
                                    <div class="invalid-feedback">
                                        Veuillez fournir une quantité valide.
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-sm-3 col-3">
                            <div class="form-group">
                                <label for="selectFrequence" class="form-label required">Fréquence</label>
                                <div class="input-group">
                                    <select name="selectFrequence[]" id="selectFrequence" class="form-control" required>
                                        <option value="" disabled selected>Choisir une fréquence</option>
                                    </select>
                                    <div class="invalid-feedback">
                                        Veuillez fournir un médicament valide.
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-sm-3 col-3">
                            <div class="form-group">
                                <label for="selectDateMed" class="form-label required">Date de fin de
                                    préscription</label>
                                <div class="input-group">
                                    <input type="date" class="form-control" id="selectDateMed" name="selectDateMed[]"
                                        required>
                                    <span class="input-group-btn">
                                        <button class="btn btn-success btn-add add-more"
                                            type="button"><span>+</span></button>
                                    </span>
                                    <div class="invalid-feedback">
                                        Veuillez fournir une date valide.
                                    </div>
                                </div>
                            </div>

                <div class="row copy hide">
                    <div class="input-group control-group">
                        <div class="col-lg-3 col-sm-4 col-3">
                            <div class="form-group">
                                <label for="selectMedicament" class="form-label required">Médicaments(s)</label>
                                <select name="selectMedicament[]" id="selectMedicament" class="form-control" required>
                                    <option value="" disabled selected>Choisir un médicament</option>
                                </select>
                                <div class="invalid-feedback">
                                    Veuillez fournir un médicament valide.
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-sm-4 col-3">
                            <div class="form-group">
                                <label for="selectQte" class="form-label required">Quantité</label>
                                <div class="input-group">
                                    <select name="selectQte[]" id="selectQte" class="form-control" required>
                                        <option value="" disabled selected>Choisir une quantité</option>
                                    </select>
                                    <div class="invalid-feedback">
                                        Veuillez fournir une quantité valide.
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-sm-3 col-3">
                            <div class="form-group">
                                <label for="selectFrequence" class="form-label required">Fréquence</label>
                                <div class="input-group">
                                    <select name="selectFrequence[]" id="selectFrequence" class="form-control" required>
                                        <option value="" disabled selected>Choisir une fréquence</option>
                                    </select>
                                    <div class="invalid-feedback">
                                        Veuillez fournir une fréquence valide.
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-sm-4 col-3">
                            <div class="form-group">
                                <label for="selectDateMed" class="form-label required">Date de fin de
                                    préscription</label>
                                <div class="input-group">
                                    <input type="date" class="form-control" id="selectDateMed" name="selectDateMed[]"
                                        required>
                                    <span class="input-group-btn">
                                        <button class="btn btn-success btn-add btnevent" type="button">
                                            <span>+</span>
                                        </button>
                                    </span>
                                    <div class="invalid-feedback">
                                        Veuillez fournir une date valide.
                                    </div>
                                </div>
                            </div>
                            </div>

                    </div>
                    </fieldset>
                </div>

                <hr>
                <div class="row">
                    <div class="col-lg-12 col-sm-12 col-12 text-center">
                        <button class="btn btn-primary" style="width: 100%;" type="submit">Valider le
                            formulaire</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <%- include('footer') %>