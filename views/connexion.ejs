<%- include('header') %>
<div class="container">
    <div class="row d-flex justify-content-center text-center">
        <div class="col-xl-12 col-md-10 mt-3">
            <div class="card">
                <div class="card-body">
                    <h1 class="">Connexion</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <form class="container" id="needs-validation" novalidate>
            <div class="row">
                <div class="col-lg-12 col-sm-12 col-12">
                    <div class="form-group">
                        <label class="text-inverse" for="validationCustom01">Identifiant</label>
                        <input type="text" class="form-control" id="validationCustom01" placeholder="Identifiant" required>
                        <div class="invalid-feedback">
                            Entrez un nom d'identifiant correct
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 col-sm-12 col-12">
                    <div class="form-group">
                        <label class="text-inverse" for="inputpassword">Mot de passe</label>
                        <input type="password" class="form-control" id="inputpassword" placeholder="Mot de passe" required>
                        <div class="invalid-feedback">
                            Please provide a valid password.
                        </div>
                    </div>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-lg-12 col-sm-12 col-12 text-center">
                    <button class="btn btn-primary"  style="width: 100%;"type="submit">Valider le formulaire</button>
                </div>
            </div>
        </form>
    </div>
</div>
<%- include('footer') %>
