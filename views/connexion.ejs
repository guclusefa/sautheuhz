<%- include('header') %>
    <div class="container">
        <!-- Titre -->
        <div class="row d-flex justify-content-center text-center">
            <div class="col-xl-12 col-md-10 mt-3">
                <div class="card">
                    <div class="card-body">
                        <h1 class="">Connexion</h1>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row mt-3">
            <form action="/sautheuhz/connexion" class="container" id="connexion" novalidate>
                <!-- Identifiant -->
                <div class="row">
                    <div class="col-lg-12 col-sm-12 col-12">
                        <div class="form-group">
                            <label class="text-inverse" for="inputIdentifiant">Identifiant</label>
                            <input type="text" class="form-control" id="inputIdentifiant" name="inputIdentifiant"
                                placeholder="Identifiant" required>
                        </div>
                    </div>
                </div>

                <!-- Mot de passe -->
                <div class="row">
                    <div class="col-lg-12 col-sm-12 col-12">
                        <div class="form-group">
                            <label class="text-inverse" for="inputPassword">Mot de passe</label>
                            <input type="password" class="form-control" id="inputPassword" name="inputPassword"
                                placeholder="Mot de passe" required>
                        </div>
                    </div>
                </div>

                <!-- Validation du formulaire -->
                <hr>
                <div class="row">
                    <div class="col-lg-12 col-sm-12 col-12 text-center">
                        <button class="btn btn-primary" style="width: 100%;" type="submit">Valider le
                            formulaire</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <%- include('footer') %>